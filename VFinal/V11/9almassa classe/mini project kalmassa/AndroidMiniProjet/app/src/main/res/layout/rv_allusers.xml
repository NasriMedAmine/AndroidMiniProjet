<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:background="@color/white"
    android:baselineAligned="false"
    android:textAlignment="center"
    app:barrierMargin="@dimen/cardview_compat_inset_shadow"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/idCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_green2"
        android:padding="@dimen/cardview_compat_inset_shadow"
        app:cardBackgroundColor="#DEF9EAFB">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/button_background_green3">

            <TextView
                android:id="@+id/idLastNameRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="#9A5904"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/idFirstNameRV" />

            <ImageView
                android:id="@+id/idImageRV"
                android:layout_width="94dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/men" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="19dp"
                android:text="FirstName:"
                android:textAlignment="center"
                android:textColor="#130B01"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/idFirstNameRV"
                app:layout_constraintStart_toEndOf="@+id/idImageRV"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="19dp"
                android:text="LastName:"
                android:textColor="#130B01"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/idLastNameRV"
                app:layout_constraintStart_toEndOf="@+id/idImageRV"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/idFirstNameRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="#9A5904"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idCheckThisProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="192dp"
                android:layout_marginEnd="54dp"
                android:text="Check This Profile ?"
                android:textColor="#03A5ED"
                android:textSize="15dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/idImageRV"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>